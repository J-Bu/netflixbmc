<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="6" android:versionName="0.0.6" 
    	package="com.pellcorp.android.netflixbmc">

    <uses-sdk android:minSdkVersion="14" 
        android:targetSdkVersion="18"/>
    
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" 
        android:name=".NetflixbmcClientApplication">
                
        <activity android:label="@string/app_name" android:name=".NetflixbmcActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="com.google.android.netflixbmc.SEND_TO_KODI" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

			<intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https"
                      android:host="netflix.com"
                      android:pathPrefix="/watch/" />
               	<data android:scheme="http"
                      android:host="netflix.com"
                      android:pathPrefix="/watch/" />
               		<data android:scheme="http"
                      android:host="www.netflix.com"
                      android:pathPrefix="/watch/" />
                <data android:scheme="https"
                      android:host="www.netflix.com"
                      android:pathPrefix="/watch/" />
            </intent-filter>
        </activity>
        
        <activity android:label="@string/app_name" android:name=".PrefsActivity" android:theme="@android:style/Theme.Black">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
